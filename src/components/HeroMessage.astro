---
/**
 * HeroMessage Component
 * A flexible component for displaying the hero message with responsive design
 */

interface Props {
  title?: string;
  subtitle?: string;
  class?: string;
}

const { 
  title, 
  subtitle,
  class: className = "" 
} = Astro.props;
---

<div class:list={["hero-message", className]}>
  {title && <h1 class="hero-title">{title}</h1>}
  {subtitle && <p class="hero-subtitle">{subtitle}</p>}
  <slot />
</div>

<style>
  .hero-message {
    max-width: 100%;
    margin: 0 auto;
  }

  .hero-title {
    font-size: clamp(1.5rem, 4vw, 2.25rem);
    line-height: 1.3;
    font-weight: 500;
    margin-bottom: 1rem;
    color: var(--text-heading);
    overflow-wrap: break-word;
    hyphens: auto;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.6;
    color: var(--text-body);
    margin-bottom: 1.5rem;
  }

  /* Small devices (landscape phones) */
  @media (max-width: 768px) {
    .hero-message {
      padding: 0 1rem;
    }
  }

  /* Medium devices (tablets) */
  @media (min-width: 769px) and (max-width: 1024px) {
    .hero-message {
      max-width: 85%;
    }
  }

  /* Large devices (desktops) */
  @media (min-width: 1025px) {
    .hero-message {
      max-width: 80%;
    }
  }
</style>