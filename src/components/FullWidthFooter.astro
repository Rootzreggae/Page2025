---
import siteConfig from '../data/site-config';

const socialLinks = siteConfig.socialLinks || [];
---

<div class="w-full bg-[#141414] py-12 sm:py-16">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="border-t border-dashed border-gray-700 pt-6">
            <div class="flex flex-col gap-4 sm:flex-row-reverse sm:justify-between sm:items-center">
                {socialLinks.length > 0 && (
                    <div class="flex flex-wrap gap-x-4 gap-y-1">
                        {socialLinks.map((link) => (
                            <a
                                class="inline-flex items-center justify-center text-sm text-gray-300 hover:text-white hover:underline hover:underline-offset-2"
                                href={link.href}
                                target="_blank"
                                rel="noopener noreferer"
                            >
                                {link.text}
                            </a>
                        ))}
                    </div>
                )}
                <p class="text-sm font-medium text-gray-300">
                    &copy; 2025 <a class="text-white hover:underline hover:underline-offset-2" href="/">NILSON GASPAR</a>. All rights reserved.
                </p>
            </div>
        </div>
    </div>
</div>