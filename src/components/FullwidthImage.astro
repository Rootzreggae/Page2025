---
/**
 * A dead-simple component for displaying an image at exactly 1216x684 pixels
 */

interface Props {
  /**
   * Image source URL
   */
  src: string;
  
  /**
   * Alternative text for the image
   */
  alt: string;
}

const { src, alt } = Astro.props;
---

<div class="fullwidth-image">
  <img src={src} alt={alt} width="1216" height="684" />
</div>

<style>
  .fullwidth-image {
    width: 1216px;
    height: 684px;
    margin: 0 auto;
    display: block;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
    max-width: none;
  }
  
  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  @media (max-width: 1216px) {
    .fullwidth-image {
      width: 100vw;
      left: 50%;
      right: 50%;
      margin-left: -50vw;
      margin-right: -50vw;
      height: auto;
      transform: none;
      aspect-ratio: 1216 / 684;
    }
  }
</style>